{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"sourceMap": true,
		"target": "ES2020",
		"module": "ESNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler"
	},
	"ts-node": {
		"compilerOptions": {
			"esm": true
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
