{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"sourceMap": true,
		"target": "ES2022",
		"module": "ESNext",
		"skipLibCheck": false,
		"esModuleInterop": true,
		"moduleResolution": "Node"
	},
	"ts-node": {
		"compilerOptions": {
			"esm": true
		}
	},
	"include": ["./src/**/*", "./types/**/*"],
	"exclude": ["node_modules"]
}
